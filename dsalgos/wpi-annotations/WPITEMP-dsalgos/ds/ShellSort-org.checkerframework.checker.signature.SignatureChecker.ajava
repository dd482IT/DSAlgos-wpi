    public  @org.checkerframework.checker.signature.qual.SignatureUnknown int getTimeComplexity(@org.checkerframework.checker.signature.qual.SignatureUnknown ShellSort this) {
        return innerLoopCount > 0 ? innerLoopCount : outerLoopCount > 0 ? outerLoopCount : gapCount;
    }

    protected void reset(@org.checkerframework.checker.signature.qual.SignatureUnknown ShellSort this) {
        super.reset();
        gapCount = 0;
