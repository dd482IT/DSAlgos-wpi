                for (int i = gap; i < n; ++i) {
                    ++outerLoopCount;
                    long temp = a[i];
                    int j = i;
                    for (; j >= gap && a[j - gap] > temp; j -= gap) {
                        ++comparisonCount;
                        ++copyCount;
                        ++innerLoopCount;
                        System.arraycopy(a, j - gap, a, j, 1);
                    }
                    if (j >= gap)
                        ++comparisonCount;
                    if (i != j)
                        a[j] = temp;
                }
            }
        }
    }
}
