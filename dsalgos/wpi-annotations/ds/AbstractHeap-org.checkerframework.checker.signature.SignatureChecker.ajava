package ds;

@org.checkerframework.framework.qual.AnnotatedFor("org.checkerframework.checker.signature.SignatureChecker")
public abstract class AbstractHeap implements IQueue {

    protected  @org.checkerframework.checker.signature.qual.SignatureUnknown long @org.checkerframework.checker.signature.qual.SignatureUnknown [] a;

    protected  @org.checkerframework.checker.signature.qual.SignatureUnknown int nElems;

