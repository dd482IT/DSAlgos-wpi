            throw new IllegalArgumentException("Invalid parameter: " + maxSize);
        a = new long[maxSize];
        nElems = 0;
    }

    @org.checkerframework.dataflow.qual.Pure
    protected abstract void heapifyUp(@org.checkerframework.checker.signature.qual.SignatureUnknown AbstractHeap this,  @org.checkerframework.checker.signature.qual.SignatureUnknown int i);

    @org.checkerframework.dataflow.qual.Pure
