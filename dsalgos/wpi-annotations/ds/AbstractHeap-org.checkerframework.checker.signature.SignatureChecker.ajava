    protected  @org.checkerframework.checker.signature.qual.SignatureUnknown int rightChild(@org.checkerframework.checker.signature.qual.SignatureUnknown AbstractHeap this,  @org.checkerframework.checker.signature.qual.SignatureUnknown int pos) {
        return (pos << 1) + 2;
