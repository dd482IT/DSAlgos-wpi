package ds;

@org.checkerframework.framework.qual.AnnotatedFor("org.checkerframework.checker.interning.InterningChecker")
public class SelectionSort extends AbstractSort {

    protected void sort( SelectionSort this,  @org.checkerframework.checker.interning.qual.Interned long  [] a,  @org.checkerframework.checker.interning.qual.Interned int length) {
        reset();
        for (int out = 0; out < length - 1; ++out) {
            int min = out;
            ++outerLoopCount;
            for (int in = out + 1; in < length; ++in) {
                ++comparisonCount;
                ++innerLoopCount;
                if (a[in] < a[min])
                    min = in;
            }
            if (min != out) {
                swap(a, out, min);
                ++swapCount;
            }
        }
    }
}
